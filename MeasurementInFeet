public class Measurement {

    private int feet;
    private int inches;

    public Measurement(int feet, int inches) {
        this.feet = feet;
        this.inches = inches;
        this.normalize();
    }

    public int getFeet() {
        return this.feet;
    }

    public void setFeet(int feet) {
        this.feet = feet;
    }

    public int getInches() {
        return this.inches;
    }

    public void setInches(int inches) {
        this.inches = inches;
        this.normalize();
    }

    private void normalize() {
        if (this.inches >= 12) {
            this.feet += this.inches / 12;
            this.inches = this.inches % 12;
        }

        while (this.inches < 0) {
            this.feet -= 1;
            this.inches += 12;
        }
    }

    @Override
    public String toString() {
        return this.feet + "' " + this.inches + "\"";
    }
}
